{
  "name": "cue-card-client",
  "version": "1.0.0",
  "description": "Cue-card",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --config ./configs/webpack/development.config.ts",
    "build": "cross-env NODE_ENV=production webpack --config ./configs/webpack/production.config.ts",
    "test": "jest --watchAll --detectOpenHandles",
    "test:precommit": "jest --forceExit --passWithNoTests",
    "test:coverage": "jest --coverage",
    "tslint": "tsc --noEmit",
    "eslint": "eslint .",
    "stylelint": "stylelint ./src/**/*.scss",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "lint:all": "npm run tslint && npm run eslint && npm run stylelint && npm run prettier:check",
    "pre-commit": "npm run lint:all && npm run test:precommit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0"
  },
  "devDependencies": {
