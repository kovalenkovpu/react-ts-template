{
  "name": "react-ts-template",
  "version": "1.0.0",
  "description": "Template repository for ReactJS-TS-Webpack",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --config ./configs/webpack/development.config.ts",
    "build": "rm -rf ./dist/* && webpack --config ./configs/webpack/production.config.ts",
    "test": "jest --watchAll --detectOpenHandles",
    "test:precommit": "jest --forceExit",
    "test:coverage": "jest --coverage",
    "tslint": "tsc --noEmit",
    "eslint": "eslint .",
    "stylelint": "stylelint ./src",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "lint:all": "npm run tslint && npm run eslint && npm run stylelint && npm run prettier:check",
    "pre-commit": "npm run lint:all && npm run test:precommit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kovalenkovpu/react-ts-template.git"
  },
  "keywords": [
    "reactjs",
    "typescript",
    "webpack",
    "jest",
    "rtl"
  ],
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.1.0",
    "jest-watch-typeahead": "^0.6.4",
    "prettier": "^2.3.2",
    "sass": "^1.38.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "author": "Pavel Kovalenkov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kovalenkovpu/react-ts-template/issues"
  },
  "homepage": "https://github.com/kovalenkovpu/react-ts-template#readme"
}
